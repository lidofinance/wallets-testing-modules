{
  "compilerOptions": {
    "skipLibCheck": true,
    "alwaysStrict": true,
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2020",
    "resolveJsonModule": true,
    "composite": true,
    "sourceMap": true,
    "lib": ["ES2020"]
  },
  "include": [
    "packages/**/src/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "packages/**/tests/**",
    "packages/**/dist/**"
  ],
  "references": [
    {
      "path": "packages/extensions"
    },
    {
      "path": "packages/nodes"
    },
    {
      "path": "packages/wallets"
    },
    {
      "path": "wallets-testing"
    }
  ]
}
